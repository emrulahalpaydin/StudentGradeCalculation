
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="viewport" content="width=device-width" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.css" />
    <link rel="stylesheet" href="~/Content/css/Login.css">
    <title>Kayıt Ol</title>
</head>
<body>

    <section class="login-all-area">
        <div class="login-header-area">
            <img src="~/Content/img/students.png">
        </div>
        <div class="register-box-area">
            <div class="login-all-body-area">
                <div class="login-body-area">
                    <h4>Kullanıcı Kayıt</h4>
                    @Html.AntiForgeryToken()
                    <div class="login-input-area">
                        <div class="mail-area">
                            <p>Öğrenci Adı Soyadı</p>
                            <input type="email" name="NameSurname" aria-describedby="emailHelp" placeholder="Ad Soyad">
                        </div>
                        <div class="password-area">
                            <p>Öğrenci Numarası</p>
                            <input type="email" name="StudentNumber" aria-describedby="emailHelp" placeholder="Öğrenci Numarası">
                        </div>
                        <div class="password-area">
                            <p>Şifre</p>
                            <input type="password" name="Password" aria-describedby="emailHelp" placeholder="Şifre">
                        </div>
                        <div class="password-area">
                            <p>Şifre</p>
                            <input type="password" name="PasswordConfirmation" aria-describedby="emailHelp" placeholder="Şifre Tekrarı">
                        </div>
                    </div>
                </div>

                <div class="login-footer-area">
                    <div class="login-button-area">
                        <a class="login-footer-button" id="registerStudentButton" href="javascript:;">Kayıt Ol</a>
                    </div>
                    <div class="login-button-area">
                        <a class="login-footer-button" href="/Student/Login">Giriş Yap</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://code.jquery.com/jquery-3.6.3.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.1/sweetalert.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.1/sweetalert.css" />
    <script src="~/Content/js/Main.js"></script>
</body>
</html>