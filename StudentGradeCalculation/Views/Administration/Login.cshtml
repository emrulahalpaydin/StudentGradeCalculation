
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="viewport" content="width=device-width" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/css/Login.css">
    <title>Giriş Yap</title>
</head>
<body>



    <section class="login-all-area">
        <div class="login-header-area">
            <img src="~/Content/img/students.png">
        </div>
        <div class="login-box-area">
            <div class="login-all-body-area">
                <div class="login-body-area">
                    <h4>Kullanıcı Girişi</h4>
                    @Html.AntiForgeryToken()
                    <div class="login-input-area">
                        <input type="hidden" name="ReturnUrl" value="@(Request.QueryString["ReturnUrl"])" />
                        <div class="mail-area">
                            <p>Kullanıcı Adı</p>
                            <input type="email" name="StudentNumber" aria-describedby="emailHelp" placeholder="Kullanıcı Adı">
                        </div>
                        <div class="password-area">
                            <p>Şifre</p>
                            <input type="password" name="Password" aria-describedby="emailHelp" placeholder="Şifre">
                        </div>
                    </div>
                    @*<div class="remember-me-area">
                            <input type="checkbox" id="1" class="vh">
                            <label for="1">Beni Hatırla</label>
                        </div>*@
                </div>

                <div class="login-footer-area">
                    <div class="login-button-area">
                        <a class="login-footer-button" id="loginButton" href="javascript:;">Giriş Yap</a>
                    </div>
                    <div class="login-button-area">
                        <a class="login-footer-button" href="/Administration/Register">Kayıt Ol</a>
                    </div>
                </div>
            </div>
        </div>
    </section>



    <script src="https://code.jquery.com/jquery-3.6.3.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.1/sweetalert.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.1/sweetalert.css" />
    <script src="~/Content/js/Main.js"></script>
</body>
</html>